<nav class="side-nav js-side-nav">
  <div class="side-nav__inner">
    {% if menu %}
    	<ol class="side-nav__menu">
    	{% for item in menu %}
    		<li class="side-nav__item">
          <a href="{{ item.get_link }}" class="side-nav__link {{ item.classes | join(' ') }}">
            {{ item.title }}
          </a>
    		</li>
    	{% endfor %}
      </ol>
    {% endif %}
  </div>
</nav>
